<%- include('../../partials/header') %>



<div class="container">
    <div class="row">

        <div class="col-4">

            <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" id="graynav">
                <span class="fs-4">Cities</span>
                <hr>  
                    <ul class="nav nav-pills flex-column mb-auto" >
                    <li class="nav-item">
                        <a href="/profiles/<%=profile._id%>" class="nav-link link-dark" id="mynav">
                        View All
                        </a>
                    </li>
                    <li>
                        <a href="/profiles/<%=profile._id%>/austin" class="nav-link link-dark" id="mynav">
                        Austin
                        </a>
                    </li>
                    <li>
                        <a href="/profiles/<%=profile._id%>/boston" class="nav-link link-dark" id="mynav">
                        Boston
                        </a>
                    </li>
                    <li>
                        <a href="/profiles/<%=profile._id%>/boulder" class="nav-link link-dark" id="mynav">
                        Boulder
                        </a>
                    </li>
                    <li>
                        <a href="/profiles/<%=profile._id%>/chicago" class="nav-link active" aria-current="page">
                        Chicago
                        </a>
                    </li>
                    <li>
                        <a href="/profiles/<%=profile._id%>/nyc" class="nav-link link-dark" id="mynav">
                        New York City
                        </a>
                    </li>
                    </ul>    
             <hr>
                <div>
                <a href="/profiles/<%=profile._id%>/restaurants/new" class="d-flex align-items-center link-dark text-decoration-none" >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                    </svg>
                    <strong>&nbsp; Add New Restaurants</strong>
                </a>
                </div>
            </div> 
        </div>

        <div class="col-8">
   
            <h2><%=profile.name%>'s Favorite Restaurants</h2>
            <br>

            <% restlist.forEach(function(r) { %>
                <div class="card">
                    <div class="card-body">
                      <h5 class="card-title"><%= r.name %></h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= r.cuisine %></h6>
                      <p class="card-text"><%= r.comment %></p>
                      <a href="/profiles/<%=profile._id%>/restaurants/<%=r._id%>" class="card-link">View Details</a>
                    </div>
                </div>
            <% }) %>
            
        </div>
    </div>
</div>


<br>
<br>
<%- include('../../partials/footer') %>