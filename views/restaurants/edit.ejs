<%- include('../partials/header') %>

<form id="submit-form" action="/restaurants/<%= restaurants.id%>?_method=PUT" method="POST">
    

    <label>Name:</label>
    <input type="text" name="name" value="<%=restaurants.name%>">
    <label>Cuisine:</label>
    <input type="text" name="cuisine" value="<%=restaurants.cuisine%>">
    <label>Money</label>
    <select name="money" value="<%=restaurants.money%>">
        <option value="$">$</option>
        <option value="$$">$$</option>
        <option value="$$$">$$$</option>
        <option value="$$$$">$$$$</option>
      </select>
    <label>City</label>
    <select name="city" value="<%=restaurants.city%>">
        <option value="boulder">Boulder</option>
        <option value="austin">Austin</option>
        <option value="boston">Boston</option>
        <option value="chicago">Chicago</option>
        <option value="nyc">NYC</option>
    </select>
    <label>Location</label>
    <input type="text" name="location" value="<%=restaurants.location%>">
    <label>Recommended Menu:</label>
    <input type="text" name="recmenu" value="<%=restaurants.recMenu%>">
    <label>Comment:</label>
    <input type="text" name="comment" value="<%=restaurants.comment%>">
    <input type="submit"value="Update">

    
</form>










<%- include('../partials/footer') %>   