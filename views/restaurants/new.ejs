<form id="submit-form" action="/profiles/<%=profile._id%>/restaurants" method="POST">
<div class="form-items">
 <h2 class="new-title">NEW RESTAURANT</h2>
<div class="rest-name">
<label for="restaurant" class="name-label">Name:</label>
<input class="form-control" type="text" name="name">
</div>
<div class="cuisine">
<label for="cuisine" class="cuisine-label">Cuisine:</label>
<input class="form-control" type="text" name="cuisine">
</div>
<div class="money">
<label for="money" class="money-label">Money:</label>
<select name="money">
  <option value="$">$</option>
  <option value="$$">$$</option>
  <option value="$$$">$$$</option>
  <option value="$$$$">$$$$</option>
</select>
</div>
<div class="city">
<label for="city" class="city-label">City:</label>
<select name="city">
  <option value="Austin">Austin</option>
  <option value="Boston">Boston</option>
  <option value="Boulder">Boulder</option>
  <option value="Chicago">Chicago</option>
  <option value="NYC">NYC</option>
</select>
</div>
 
<div class="location">
<label for="location" class="location-label">Location:</label>
<input class="form-control" type="text" name="location">
</div>
<div class="menurec">
<label for="menu" class="menu-label">Recommended Menu:</label>
<input class="form-control" type="text" name="recmenu">
</div>
<div class="comment-section">
<label for="comments" class="comment-label">Comments:</label>
<input class="form-control" type="text" name="comment">
</div>
<div id="restaurant-add-btn">
 <input class="btn btn-primary" type="submit" value="Add Restaurant">
 </div>
</div>
</form>
 


